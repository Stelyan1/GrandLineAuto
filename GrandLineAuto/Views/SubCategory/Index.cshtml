@model IReadOnlyCollection<GrandLineAuto.Infrastructure.DTO_s.SubCategoryDTO>

@{
    ViewData["Title"] = "Sub Categories";
    var q = Context.Request.Query["q"].ToString();
    var subcategoryName = ViewBag.SeriesName as string;
    var guidId = Context.Request.Query["guidId"].ToString();
    var modelId = Context.Request.Query["modelId"].ToString();
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>
                @(string.IsNullOrWhiteSpace(subcategoryName)
                                ? "Browse subcategories"
                                : $"Browse {subcategoryName}")
            </h1>
            <p>Select a subcategory to view available products.</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No subcategories found</h3>
            <p>There are no subcategories for this selection.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var sc in Model)
            {
                <a class="gl-card"
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-subCategoryId="@sc.Id"
                   asp-route-brandModelId="@modelId">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(sc.ImageUrl))
                        {
                            <img src="@sc.ImageUrl" alt="@sc.Name" loading="lazy" />
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@sc.Name</div>
                    <div class="gl-card__sub">View products →</div>
                </a>
            }
        </div>
    }

</div>






