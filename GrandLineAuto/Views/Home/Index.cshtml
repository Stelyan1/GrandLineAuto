@using GrandLineAuto.Data.Models
@model IReadOnlyCollection<Brand>

@{
    ViewData["Title"] = "Home";
    var q = (string?)ViewBag.Query;
}

<div class="container py-4">

    
    <div class="hero-card p-4 p-md-5 mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-lg-7">
                <h1 class="display-6 fw-bold mb-2">
                    Browse car brands and find parts faster
                </h1>
                <p class="mb-0 hero-subtext">
                    Pick a brand to continue to model series. Use search to filter quickly.
                </p>
            </div>

            <div class="col-lg-5">
                <form method="get" asp-action="Index" class="d-flex">
                    <div class="input-group input-group-lg shadow-sm">
                        <input name="q"
                               value="@q"
                               class="form-control"
                               placeholder="Search brand..."
                               autocomplete="off" />
                        <button class="btn btn-dark" type="submit" aria-label="Search">
                            <span class="me-1">🔎</span> Search
                        </button>
                    </div>
                </form>

                @if (!string.IsNullOrWhiteSpace(q))
                {
                    <div class="mt-2 small text-muted">
                        Showing results for: <span class="fw-semibold">@q</span>
                        <a asp-action="Index" class="ms-2 text-decoration-none">Clear</a>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light border text-center py-4">
            <div class="fs-5 fw-semibold mb-1">No brands found</div>
            <div class="text-muted">Try searching with a different keyword.</div>
        </div>
    }
    else
    {
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="h5 mb-0">Brands</h2>
            <span class="badge text-bg-light border">@Model.Count</span>
        </div>

        <div class="row g-3 g-md-4">
            @foreach (var b in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a asp-controller="BrandModelSeries"
                       asp-action="Index"
                       asp-route-brandId="@b.Id"
                       class="text-decoration-none">

                        <div class="card brand-card h-100">
                            <div class="brand-image-wrap">
                                @if (!string.IsNullOrWhiteSpace(b.ImageUrl))
                                {
                                    <img src="@b.ImageUrl"
                                         alt="@b.Name logo"
                                         class="brand-image"
                                         loading="lazy" />
                                }
                                else
                                {
                                    <div class="brand-fallback">
                                        <span>No image</span>
                                    </div>
                                }
                            </div>

                            <div class="card-body py-3">
                                <div class="fw-semibold brand-title">@b.Name</div>
                                <div class="text-muted small">View model series →</div>
                            </div>
                        </div>

                    </a>
                </div>
            }
        </div>
    }

</div>

@section Styles {
    <style>
        

        .hero-card {
            border: 1px solid rgba(0,0,0,.08);
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(10,138,10,.10), rgba(255,255,255,1));
        }

            .hero-card h1 {
                color: #0a8a0a;
                line-height: 1.1;
            }

        .hero-subtext {
            color: rgba(0,0,0,.65);
        }

        .brand-card {
            border-radius: 16px;
            border: 1px solid rgba(0,0,0,.10);
            transition: transform .15s ease, box-shadow .15s ease;
            overflow: hidden;
        }

            .brand-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 26px rgba(0,0,0,.12);
            }

        .brand-image-wrap {
            height: 130px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
            border-bottom: 1px solid rgba(0,0,0,.08);
        }

        .brand-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            padding: 14px;
        }

        .brand-fallback {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgba(0,0,0,.55);
            font-size: 14px;
        }

        .brand-title {
            color: #0a8a0a;
        }
    </style>
}







