@using GrandLineAuto.Infrastructure.DTO_s
@model IReadOnlyCollection<BrandDTO>

@{
    ViewData["Title"] = "Home";
    var q = (string?)ViewBag.Query;
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>Browse car brands</h1>
            <p>
                Choose a brand to explore model series and find compatible parts.
            </p>
        </div>

        <form method="get" asp-action="Index" class="gl-search" role="search">
            <input name="q"
                   value="@q"
                   placeholder="Search brand..."
                   autocomplete="off" />
            <button type="submit" aria-label="Search">🔎</button>
        </form>
    </div>

    @if (!string.IsNullOrWhiteSpace(q))
    {
        <div class="gl-meta">
            Showing results for <strong>@q</strong>
            <a asp-action="Index">Clear</a>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No brands found</h3>
            <p>Try searching with a different keyword.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var b in Model)
            {
                <a class="gl-card"
                   asp-controller="BrandModelSeries"
                   asp-action="Index"
                   asp-route-brandId="@b.Id">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(b.ImageUrl))
                        {
                            <img src="@b.ImageUrl" alt="@b.Name logo" loading="lazy" />
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@b.Name</div>
                    <div class="gl-card__sub">View model series →</div>
                </a>
            }
        </div>
    }

</div>




