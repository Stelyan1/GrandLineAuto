@model IReadOnlyCollection<GrandLineAuto.Infrastructure.DTO_s.BrandModelSeriesDTO>

@{
    ViewData["Title"] = "Model Series";
    var q = Context.Request.Query["q"].ToString();
    var brandId = Context.Request.Query["brandId"].ToString();
    var brandName = ViewBag.BrandName as string;
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>@(string.IsNullOrWhiteSpace(brandName) ? "Browse model series" : $"Browse {brandName} series")</h1>
            <p>Pick a series to continue browsing models.</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No series found</h3>
            <p>Try searching with a different keyword.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var s in Model)
            {
                <a class="gl-card"
                   asp-controller="BrandModels"
                   asp-action="Index"
                   asp-route-brandModelSeriesId="@s.Id">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(s.ImageUrl))
                        {
                            <img src="@s.ImageUrl" alt="@s.Name" loading="lazy" />
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@s.Name</div>
                    <div class="gl-card__sub">Click to browse models →</div>
                </a>
            }
        </div>
    }
</div>



