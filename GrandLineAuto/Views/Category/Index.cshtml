@model IReadOnlyCollection<GrandLineAuto.Infrastructure.DTO_s.CategoryDTO>

@{
    ViewData["Title"] = "Categories";
    var q = Context.Request.Query["q"].ToString();
    var categoryName = ViewBag.SeriesName as string;
    var guidId = Context.Request.Query["guidId"].ToString();
    var modelId = ViewBag.ModelId;
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>
                @(string.IsNullOrWhiteSpace(categoryName)
                                ? "Browse categories"
                                : $"Browse categories {categoryName}")
            </h1>
            <p>Select a category to continue to subcategories.</p>
        </div>

        
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No categories available</h3>
            <p>Currently we don’t have parts for this selection.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var c in Model)
            {
                <a class="gl-card"
                   asp-controller="SubCategory"
                   asp-action="Index"
                   asp-route-categoryId="@c.Id"
                   asp-route-modelId="@modelId">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(c.ImageUrl))
                        {
                            <img src="@c.ImageUrl" alt="@c.Name" loading="lazy" />
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@c.Name</div>
                    <div class="gl-card__sub">View subcategories →</div>
                </a>
            }
        </div>
    }

</div>
