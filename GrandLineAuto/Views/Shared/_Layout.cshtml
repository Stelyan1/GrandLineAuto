<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Confirm</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="gla">

    <header class="site-header">
        <div class="top-banner">
            <div class="slideshow" aria-label="Homepage slideshow">
                <img src="https://wallpapers.com/images/hd/1920x1080-bmw-olutqd2j9v4jugb3.jpg" alt="Car Banner 1">
                <img src="https://www.westcoastexoticcars.com/imagetag/698/main/l/Used-2012-Mercedes-Benz-C63-Black-Series-1617045868.jpg" alt="Car Banner 2">
                <img src="https://autobild.bg/wp-content/uploads/2020/04/Abt-RS-6-R-1200x800-d38918bd421d7bbc.jpg" alt="Car Banner 3">
                <img src="https://cdn.bmwblog.com/wp-content/uploads/2017/08/2018-bmw-5-series-ac-schnitzer.jpg" alt="Car Banner 4">
                <img src="https://www.dodge.com/content/dam/fca-brands/na/dodge/en_us/2023/challenger/srt/desktop/MY23_SRThub_Challenger_Hellcat_Widebody_Desktop_01.jpg" alt="Car Banner 5">
                <img src="https://cka-dash.s3.amazonaws.com/050-0723-CDJ751/mainimage.jpg" alt="Car Banner 6">
            </div>
        </div>

        <nav class="main-nav" role="navigation">
            <div class="nav-inner">

                <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-mark">GL</span>
                    <span class="brand-text">GrandLineAuto</span>
                </a>

                <button class="nav-toggle" type="button" aria-label="Open menu" aria-expanded="false" aria-controls="navLinks">
                    <span></span><span></span><span></span>
                </button>

                <div class="nav-links" id="navLinks">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                    <a class="nav-link nav-cart" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3" aria-hidden="true"></i>
                        <span>Cart</span>
                    </a>

                    <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="MyOrders">MyOrders</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link nav-admin" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            Admin Panel
                        </a>
                    }
                </div>

                <div class="auth-links">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>

    
    <div class="page-bg">
        <div class="container site-content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - GrandLineAuto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

   
    <script>
        (function () {
            const btn = document.querySelector('.nav-toggle');
            const links = document.getElementById('navLinks');
            if (!btn || !links) return;

            btn.addEventListener('click', () => {
                const isOpen = links.classList.toggle('open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });

            
            document.addEventListener('click', (e) => {
                if (!links.classList.contains('open')) return;
                const clickedInside = links.contains(e.target) || btn.contains(e.target);
                if (!clickedInside) {
                    links.classList.remove('open');
                    btn.setAttribute('aria-expanded', 'false');
                }
            });
        })();
    </script>
</body>
</html>
