@model IReadOnlyCollection<GrandLineAuto.Infrastructure.DTO_s.ProductDTO>

@{
    ViewData["Title"] = "Products";
    var q = Context.Request.Query["q"].ToString();
    var title = ViewBag.SeriesName as string;

    var guidId = Context.Request.Query["guidId"].ToString();
    var brandModelId = Context.Request.Query["brandModelId"].ToString();
    var subCategoryId = Context.Request.Query["subCategoryId"].ToString();
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>
                @(string.IsNullOrWhiteSpace(title)
                                ? "Browse products"
                                : $"Browse {title}")
            </h1>
            <p>Select a product to view details or purchase.</p>
        </div>

        <form method="get" asp-action="Index" class="gl-search" role="search">
            <input type="hidden" name="guidId" value="@guidId" />
            <input type="hidden" name="brandModelId" value="@brandModelId" />
            <input type="hidden" name="subCategoryId" value="@subCategoryId" />

            <input name="q"
                   value="@q"
                   placeholder="Search product..."
                   autocomplete="off" />

            <button type="submit" aria-label="Search">🔎</button>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No products found</h3>
            <p>Try adjusting your search or filters.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var p in Model)
            {
                <a class="gl-card"
                   asp-controller="Product"
                   asp-action="Details"
                   asp-route-productId="@p.Id">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" alt="@p.Name" loading="lazy" />
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@p.Name</div>

                    <div class="gl-card__price">
                        @p.Price.ToString("0.00") BGN
                    </div>

                    <div class="gl-card__cta">
                        Buy →
                    </div>
                </a>
            }
        </div>
    }

</div>

