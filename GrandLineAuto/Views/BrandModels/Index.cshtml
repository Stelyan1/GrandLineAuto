@model IReadOnlyCollection<GrandLineAuto.Infrastructure.DTO_s.BrandModelsDTO>

@{
    ViewData["Title"] = "Brand Models";
    var q = Context.Request.Query["q"].ToString();
    var seriesName = ViewBag.SeriesName as string;
    var guidId = Context.Request.Query["guidId"].ToString();
}

<div class="container py-4">

    <div class="gl-hero">
        <div class="gl-hero__text">
            <h1>@(string.IsNullOrWhiteSpace(seriesName) ? "Browse models" : $"Browse {seriesName} models")</h1>
            <p>Choose a model to continue to categories.</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="gl-empty">
            <h3>No models found</h3>
            <p>Try a different search.</p>
        </div>
    }
    else
    {
        <div class="gl-grid">
            @foreach (var m in Model)
            {
                <a class="gl-card"
                   asp-controller="Category"
                   asp-action="Index"
                   asp-route-modelId="@m.Id">

                    <div class="gl-card__img">
                        @if (!string.IsNullOrWhiteSpace(m.ImageUrl))
                        {
                            <img src="@m.ImageUrl" alt="@m.Name" loading="lazy" />
                            <span class="gl-badge">@m.yearProduced</span>
                        }
                        else
                        {
                            <div class="gl-fallback">No image</div>
                        }
                    </div>

                    <div class="gl-card__title">@m.Name</div>
                    <div class="gl-card__sub">View categories →</div>
                </a>
            }
        </div>
    }

</div>