@using GrandLineAuto.Infrastructure.ViewModels
@model BrandModelSeriesVM

@{
    ViewData["Title"] = "Create Series";
   
}

<div class="brands-hero">
    <h1>Create New Series</h1>
</div>

<div class="form-wrapper">
    <form asp-action="CreateBrandModelsSeries" method="post">
        @Html.AntiForgeryToken()

        <!-- Name -->
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="e.g. A4, 3 Series" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Image -->
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <!-- Production Years -->
        <div class="form-group">
            <label asp-for="productionYears"></label>
            <input asp-for="productionYears" class="form-control" placeholder="e.g. 2015 - 2022" />
            <span asp-validation-for="productionYears" class="text-danger"></span>
        </div>

        <!-- Brand -->
        <div class="form-group">
            <label asp-for="BrandId"></label>
            <select asp-for="BrandId" asp-items="Model.Brands" class="form-control">
                <option value="">-- Select Brand --</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
